{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/base",
		"plugin:vue/vue3-recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier"
	],
	"parserOptions": {
		"parser": "@typescript-eslint/parser",
		"sourceType": "module",
		"ecmaVersion": 12
	},
	"plugins": ["vue", "@typescript-eslint", "prettier"],
	"rules": {
		"prefer-const": "error",
		"prettier/prettier": "error"
	}
}
