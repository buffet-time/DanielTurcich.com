{
	"name": "danielturcich.com",
	"description": "My website, a bio and portfolio site.",
	"version": "1.0.0",
	"type": "module",
	"author": {
		"email": "packageJson@danielTurcich.com",
		"name": "Daniel Turcich",
		"url": "https://danielTurcich.com"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=7.0.0"
	},
	"scripts": {
		"serve": "vite",
		"serve:network": "vite --host",
		"lint-fix": "eslint --fix \"**/*.{ts,vue}\"",
		"lint-check": "eslint \"**/*.{ts,vue}\"",
		"format-fix": "prettier --check --write \"**/**\" ",
		"format-check": "prettier --check \"**/**\"",
		"type-check": "vue-tsc --noEmit",
		"preview": "vite preview",
		"prepare": "husky install",
		"build": "vue-tsc --noEmit && vite build --emptyOutDir && pnpm generate:404 && pnpm add:cname",
		"add:cname": "cd dist && echo 'danielturcich.com' > CNAME",
		"generate:404": "cd dist && cp index.html 404.html"
	},
	"dependencies": {
		"dialog-polyfill": "^0.5.6",
		"vue": "^3.2.45",
		"vue-router": "^4.1.6"
	},
	"devDependencies": {
		"@nabla/vite-plugin-eslint": "^1.5.0",
		"@types/node": "^18.11.18",
		"@typescript-eslint/eslint-plugin": "^5.48.0",
		"@typescript-eslint/parser": "^5.48.0",
		"@vitejs/plugin-vue": "^4.0.0",
		"@vue/eslint-config-typescript": "^11.0.2",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.31.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.8.0",
		"husky": "^8.0.3",
		"postcss": "^8.4.20",
		"prettier": "^2.8.1",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"vue-eslint-parser": "^9.1.0",
		"vue-tsc": "^1.0.20"
	}
}
