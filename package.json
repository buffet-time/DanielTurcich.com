	"scripts": {
		"serve": "vite",
		"preview": "vite preview",
		"prepare:husky": "husky install",
		"build": "vue-tsc --noEmit && vite build --emptyOutDir && pnpm generate:404",
		"generate:404": "cd dist && cp index.html 404.html",
		"deploy": "npm run deploy:delete-branch && npm run deploy:create-branch",
		"deploy:delete-branch": "git branch -D gh-pages",
		"deploy:create-branch": "git push origin `git subtree split --prefix dist master`:gh-pages --force"
	},
	"dependencies": {
		"dialog-polyfill": "^0.5.6",
		"vue": "^3.2.33",
		"vue-router": "^4.0.14"
	},
